<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Line?>

<AnchorPane fx:id="lessonPane" prefHeight="860.0" prefWidth="1226.0" stylesheets="@../css/Lesson.css"
            xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.controller.LessonController">
    <children>
        <Label layoutX="47.0" layoutY="37.0" styleClass="title" text="Lesson"/>
        <Label layoutX="47.0" layoutY="79.0" styleClass="smalltitle" text="Manage Lessons in Class"/>
        <Line endX="1120.0" layoutX="47.0" layoutY="118.0" styleClass="line"/>
        <Label fx:id="className" layoutX="47.0" layoutY="133.0" styleClass="nameClass" text="CLASS"/>
        <Label fx:id="courseName" layoutX="47.0" layoutY="171.0" styleClass="nameCourse" text="Course"/>
        <ScrollPane hbarPolicy="NEVER" layoutX="46.0" layoutY="219.0" pannable="true" prefHeight="200.0"
                    prefWidth="200.0" vbarPolicy="NEVER">
            <content>
                <AnchorPane>
                    <children>
                        <GridPane fx:id="gridPane" layoutY="5.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                        </GridPane>
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>
        <Group layoutX="46.0" layoutY="764.0">
            <children>
                <TextField layoutY="8.0" promptText="Search..." styleClass="searchBox"/>
                <ImageView fitHeight="16.0" fitWidth="16.0" layoutY="6.0" pickOnBounds="true" preserveRatio="true"
                           x="8.0" y="9.0">
                    <image>
                        <Image url="@../image/search.png"/>
                    </image>
                </ImageView>
            </children>
        </Group>
        <HBox layoutX="367.0" layoutY="772.0" spacing="5.0">
            <children>
                <Button mnemonicParsing="false" onAction="#add" prefWidth="23.0" styleClass="addBtn">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                    <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../image/add.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="edit" mnemonicParsing="false" styleClass="actionBtn">
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../image/edit.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button fx:id="delete" mnemonicParsing="false" styleClass="actionBtn">
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../image/delete.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
            </children>
        </HBox>
        <Line endY="707.0" layoutX="510.0" layoutY="132.0" styleClass="lessonLine"/>
        <HBox layoutX="46.0" layoutY="822.0" onMouseClicked="#backToCourseBtn" styleClass="manageChapterBtn">
            <children>
                <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../image/arrow_left.png"/>
                    </image>
                </ImageView>
                <Label styleClass="manageChapterBtn" text="Back to Courses"/>
            </children>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </HBox>
        <Group fx:id="lessonTab" layoutX="528.0" layoutY="133.0">
            <children>
                <TabPane focusTraversable="false" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                        <Tab closable="false" text="Materials">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"
                                            fx:id="materialPane">
                                    <children>
                                        <Group layoutX="15.0" layoutY="22.0">
                                            <children>
                                                <TextField layoutY="8.0" promptText="Search..." styleClass="searchBox"/>
                                                <ImageView fitHeight="16.0" fitWidth="16.0" layoutY="6.0"
                                                           pickOnBounds="true" preserveRatio="true" x="8.0" y="9.0">
                                                    <image>
                                                        <Image url="@../image/search.png"/>
                                                    </image>
                                                </ImageView>
                                            </children>
                                        </Group>
                                        <ScrollPane hbarPolicy="NEVER" layoutX="15.0" layoutY="76.0" pannable="true"
                                                    prefHeight="581.0" prefWidth="200.0" styleClass="scrollPaneMaterial"
                                                    vbarPolicy="NEVER">
                                            <content>
                                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0"
                                                            prefWidth="200.0" styleClass="scrollPaneMaterial"/>
                                            </content>
                                        </ScrollPane>
                                        <Button layoutX="544.0" layoutY="30.0" mnemonicParsing="false" onAction="#add"
                                                prefWidth="99.0" style="-fx-pref-width: 110; -fx-pref-height: 31;"
                                                styleClass="addBtn" text="Upload File">
                                            <cursor>
                                                <Cursor fx:constant="HAND"/>
                                            </cursor>
                                            <graphic>
                                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                                           preserveRatio="true">
                                                    <image>
                                                        <Image url="@../image/arrow_up.png"/>
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </Button>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>
                        <Tab closable="false" text="Attendances" fx:id="attendancePane">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                    <children>
                                        <ScrollPane layoutX="15.0" layoutY="196.0" prefHeight="200.0" prefWidth="200.0"
                                                    styleClass="scrollPaneAttendance">
                                            <content>
                                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0"
                                                            prefWidth="200.0"/>
                                            </content>
                                        </ScrollPane>
                                        <ScrollPane layoutX="351.0" layoutY="196.0" prefHeight="200.0" prefWidth="200.0"
                                                    styleClass="scrollPaneAttendance">
                                            <content>
                                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0"
                                                            prefWidth="200.0"/>
                                            </content>
                                        </ScrollPane>
                                        <ImageView fitWidth="17.0" layoutX="328.0" layoutY="404.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../image/arrow_right_2.png"/>
                                            </image>
                                        </ImageView>
                                        <Group layoutX="15.0" layoutY="148.0">
                                            <children>
                                                <TextField layoutY="8.0" prefWidth="150.0" promptText="Search..."
                                                           style="-fx-pref-width: 143;" styleClass="searchBox"/>
                                                <ImageView fitHeight="16.0" fitWidth="16.0" layoutY="6.0"
                                                           pickOnBounds="true" preserveRatio="true" x="8.0" y="9.0">
                                                    <image>
                                                        <Image url="@../image/search.png"/>
                                                    </image>
                                                </ImageView>
                                            </children>
                                        </Group>
                                        <Label layoutX="180.0" layoutY="170.0" styleClass="titleAttendance"
                                               text="List of absent Students"/>
                                        <Label layoutX="512.0" layoutY="170.0" styleClass="titleAttendance"
                                               text="List of absent Students"/>
                                        <AnchorPane layoutX="15.0" layoutY="36.0" prefHeight="200.0" prefWidth="200.0"
                                                    styleClass="absentPane">
                                            <children>
                                                <Label layoutX="22.0" layoutY="10.0" styleClass="absentText"
                                                       text="Absent"/>
                                                <Label layoutX="193.0" layoutY="50.0" prefHeight="45.0" prefWidth="99.0"
                                                       styleClass="absentNumber" text="-----"/>
                                            </children>
                                        </AnchorPane>
                                        <AnchorPane layoutX="351.0" layoutY="36.0" prefHeight="200.0" prefWidth="200.0"
                                                    styleClass="totalPane">
                                            <children>
                                                <Label layoutX="22.0" layoutY="10.0" styleClass="totalText"
                                                       text="Total"/>
                                                <Label layoutX="193.0" layoutY="50.0" prefHeight="45.0" prefWidth="99.0"
                                                       styleClass="totalNumber" text="-----"/>
                                            </children>
                                        </AnchorPane>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
                <Line endX="660.0" layoutX="0.5" layoutY="46.5" styleClass="lessonLine"/>
            </children>
        </Group>
        <Label layoutX="528.0" layoutY="132.0" styleClass="emptyTab" text="Select a lesson to manage" visible="false"
               wrapText="true"/>
    </children>
</AnchorPane>
